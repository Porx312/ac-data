{
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "compilerOptions": {
    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,

    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Clean & Stable Settings */
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true
  }
}
